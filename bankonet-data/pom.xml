<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>dta</groupId>
	<artifactId>bankonet-data</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<properties>
		<jdbc.driver>com.mysql.jdbc.Driver</jdbc.driver>
		<jdbc.url>jdbc:mysql://localhost:3306:bankonetbdd</jdbc.url>
		<jdbc.user>Auffret</jdbc.user>
		<jdbc.password>mdp</jdbc.password>
	</properties>


	<build>

		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>sql-maven-plugin</artifactId>
				<version>1.5</version>

				<dependencies>
					<!-- specify the dependent jdbc driver here -->
					<dependency>
						<groupId>mysql</groupId>
						<artifactId>mysql-connector-java</artifactId>
						<version>5.1.37</version>
						<scope>runtime</scope>
					</dependency>
				</dependencies>

				<configuration>
					<driver>com.mysql.jdbc.Driver</driver>
					<url>${jdbc.url}</url>
					<username>Auffret</username>
					<password>mdp</password>
				</configuration>

				<executions>
					<execution>
						<id>clean-db</id>
						<phase>test</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<inherited>false</inherited>
						<configuration>
							<autocommit>true</autocommit>
							<srcFiles>src/main/sql/clean-db.sql</srcFiles>
							<srcFiles>src/main/sql/init-db.sql</srcFiles>
						</configuration>
					</execution>
				</executions>

			</plugin>

		</plugins>
	</build>
</project>